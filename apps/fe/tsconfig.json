{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src/",
    "typeRoots": ["src/types", "src/common/types", "node_modules/@types", "@ui/common/types"],
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@ui": ["../../../libs/ui/src/index.ts"],
      "@ui/*": ["../../../libs/ui/src/*"],
      "@assets/*": ["../../../libs/assets/*"],
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules"  
  ]
}
